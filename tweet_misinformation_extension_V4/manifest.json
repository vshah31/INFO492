{
  "manifest_version": 3,
  "name": "Tweet Verifier",
  "version": "1.0",
  "description": "Detects potential COVID misinformation in tweets.",
  "permissions": ["activeTab", "scripting"],
  "host_permissions": ["https://twitter.com/*", "https://x.com/*"],
  "content_scripts": [
    {
      "matches": ["https://twitter.com/*", "https://x.com/*"],
      "js": ["content.js"]
    }
  ],
  "action": {
    "default_popup": "popup.html"
  }
}
